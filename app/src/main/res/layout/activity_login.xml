<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    android:background="@drawable/blur_white"
    tools:context="com.shivanshu.sak.mediappointment.LoginActivity">

    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="100dp"
        android:layout_height="101dp"
        app:srcCompat="@drawable/login_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/email_loginField"
        android:layout_width="322dp"
        android:layout_height="54dp"
        android:layout_marginTop="26dp"
        android:textColorHint="#494444"
        android:background="@drawable/round_styling"
        android:ems="10"
        android:paddingLeft="15dp"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_icon"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteY="151dp"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/forget_password"
        android:layout_width="208dp"
        android:layout_height="39dp"
        android:text="Forgot Password ?"
        android:textColor="#3e3b3b"
        android:textSize="15sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_pass"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="176dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:text="SIGNIN"
        android:textSize="18sp"
        android:onClick="LoginUser"
        android:background="@drawable/round_styling"
        android:textColor="#3e3b3b"
        app:layout_constraintTop_toBottomOf="@+id/forget_password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.574"
        tools:layout_editor_absoluteX="42dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_pass"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_loginField">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pass_loginField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_styling"
            android:hint="Enter Password"
            android:paddingLeft="15dp"
            android:textColorHint="#494444"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>
