<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_doctor_list"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="5dp"
        android:elevation="0dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/doc_image"
                android:layout_width="122dp"
                android:layout_height="137dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dr_photo"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/dr_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="27dp"
                android:paddingLeft="10dp"
                android:text="Dr Name"
                android:textSize="18dp"
                app:layout_constraintLeft_toRightOf="@+id/doc_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:textSize="15dp"
                android:id="@+id/dr_degree"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="Degree"
                app:layout_constraintLeft_toRightOf="@+id/doc_image"
                android:layout_marginStart="23dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/dr_name" />

            <TextView
                android:id="@+id/dr_experience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="16dp"
                android:text="Experience"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/doc_image"
                app:layout_constraintTop_toBottomOf="@+id/dr_degree"
                android:layout_marginStart="23dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.577" />

            <TextView
                android:id="@+id/dr_description"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:text="Description"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doc_image"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/see_more"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:text="See More"
        android:elevation="10dp"
        android:background="@drawable/round_styling"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="245dp"
        android:layout_marginLeft="8dp"
        style="@style/Widget.AppCompat.Button.Colored"
        app:layout_constraintLeft_toLeftOf="@+id/card_view_doctor_list"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.476" />

</android.support.constraint.ConstraintLayout>